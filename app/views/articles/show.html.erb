<h1><%= @article.title %></h2>

<p><%= @article.body %></p>
<p><%= link_to "Edit", edit_article_path(@article), :class => "edit_article"%></p>
<p>
	Tags:
	<% @article.tags.each do |tag| %>
		<%= link_to tag.name, tag_path(tag) %>
	<% end %>
</p>

<h3><%= @article.comments.size %> Comments</h3>
<h3>Comments</h3>
<%= render :partial => "articles/comments", :locals => {:comments => @article.comments } %>

<h3>Post a Comment</h3>
<%= render :partial => 'comments/comment_form', :locals => {:article => @article, :comment => @article.comments.new } %>